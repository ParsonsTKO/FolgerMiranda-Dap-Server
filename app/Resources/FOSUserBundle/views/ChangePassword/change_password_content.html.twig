{% trans_default_domain 'FOSUserBundle' %}

<h1 class="u-fontSize-large u-mb-2">Change password</h1>
{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
    <div class="form-group">
      {{ form_label(form.current_password) }}
      {{ form_widget(form.current_password, { 'attr': {'class': 'form-field is-small'}}) }}
    </div>
    <div class="form-group">
      {{ form_label(form.plainPassword.first) }}
      {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-field is-small'}}) }}
    </div>
    <div class="form-group">
      {{ form_label(form.plainPassword.second) }}
      {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-field is-small'}}) }}
    </div>
    <div class="text-center">
        <input class="button is-secondary" type="submit" value="{{ 'change_password.submit'|trans }}" />
    </div>
{{ form_end(form) }}
