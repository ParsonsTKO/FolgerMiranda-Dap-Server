{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
<div class="u-secondary">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<h1 class="u-fontSize-large u-mb-2">Log in</h1>

<form action="{{ path("fos_user_security_check") }}" method="post">
  {% if csrf_token %}
  <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
  {% endif %}
  <div class="form-group">
    <label for="username">{{ 'security.login.username'|trans }}</label>
    <input class="form-field is-small" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
  </div>
  
  <div class="form-group">
    <label for="password">{{ 'security.login.password'|trans }}</label>
    <input class="form-field is-small" type="password" id="password" name="_password" required="required" autocomplete="current-password" />
  </div>
  <div class="form-group u-vCenter">
    <input class="form-checkbox" type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
  </div>
  
  <div class="text-center">
    <input class="button is-secondary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
  </div>
  <div class="text-center u-mt-3">
    <a href="{{path('fos_user_resetting_request')}}">Forgot password</a>
  </div>
</form>